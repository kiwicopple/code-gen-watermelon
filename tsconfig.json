{
  "include": ["src"],
  "compilerOptions": {
    "module": "CommonJS",
    "outDir": "dist",
    "sourceMap": true,
    "target": "ES2015",

    "strict": true,

    "esModuleInterop": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "stripInternal": true
  }
}
